@model IEnumerable<SalesBillingSystem.Models.Customer>
@{
    ViewData["Title"] = "Customer List";
}
<h2>Customer List</h2>
<p><a href="@Url.Action("Create")" class="btn btn-primary">Add Customer</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.ContactNumber</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">Edit</a>
                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">Details</a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
