@model SalesBillingSystem.Models.Invoice
@{
    ViewData["Title"] = "Delete Invoice";
}
<h2>Delete Invoice</h2>
<h3>Are you sure you want to delete this invoice?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer?.Name</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div> 