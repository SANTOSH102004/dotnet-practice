@model IEnumerable<SalesBillingSystem.Models.Invoice>
@{
    ViewData["Title"] = "Invoice List";
}
<h2>Invoice List</h2>
<p><a href="@Url.Action("Create")" class="btn btn-primary">Create Invoice</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Date</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Customer?.Name</td>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.Total</td>
            <td>
                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">Details</a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
